<h1 style="margin-left:10px">Wikis</h1>

<div class="row">
  <div class="col-md-8", style="margin-left:10px"> 
      <% if current_user %>
    <%= link_to "New Wiki", new_wiki_path, class: 'btn btn-primary' %>
  <% end %>
    <% @wikis.each do |wiki| %>
    <div class="media">
      <div class="media-body">
        <h3 class="media-heading">
          <% if wiki.private? %>
            <%= link_to wiki.title, wiki, class: "private" %> <small>[private]</small>
          <% else %>
            <%= link_to wiki.title, wiki %>
          <% end %>
        </h3>
        <small>By <%= wiki.user.name %> | <%= time_ago_in_words(wiki.created_at) %> ago</small>
      </div>
    </div>
    <% end %>
  </div>

</div>